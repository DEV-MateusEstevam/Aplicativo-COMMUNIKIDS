<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Login"
    android:orientation="vertical"
    android:background="@color/roxo1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SEJA BEM VINDO AO"
        android:textStyle="italic"
        android:textSize="44dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imglogo"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="60dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/imgfundo1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLIQUE EM UM DOS BOTÃ•ES:"
            android:textSize="28dp"
            android:gravity="center"
            android:textStyle="italic"
            android:textColor="@color/roxo1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            />

        <ImageButton
            android:id="@+id/btnMenuinteracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btnmenuinteracao"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            />

        <ImageButton
            android:id="@+id/btnCadastroaluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btncadastraraluno"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            />

        <ImageButton
            android:id="@+id/btnMOvoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btnfazerlogoff"
            android:layout_gravity="center"
            android:background="@color/white"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgIcon128"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon256"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

</LinearLayout>
